{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable", "WebWorker"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "noEmit": true,
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["@pawover/types"]
  },
  "include": ["*.config.ts", ".cache/*.d.ts", "*.d.ts", "src/**/*", "scripts"],
  "exclude": ["node_modules"]
}
